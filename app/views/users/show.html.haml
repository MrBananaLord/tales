= render "users/aside_profile", user: @user

.col-md-9.col-sm-12
  .panel.panel-default
    .panel-heading
      %h2= link_to t(".created_games"), user_games_path(@user)
    .panel-body
      - if @user_games.any?
        = render @user_games
      - else
        = t(".no_user_games")
      
  .panel.panel-default
    .panel-heading
      %h2= t(".favorite_games")
    .panel-body
      - if @user_favorite_games.any?
        = render @user_favorite_games
      - else
        = t(".no_user_favorite_games")
