- if controller_name == 'registrations'
  = link_to t(".sign_in"), new_session_path(resource_name)
  %br
  
- if devise_mapping.registerable? && controller_name == 'sessions'
  = link_to t(".sign_up"), new_registration_path(resource_name)
  %br
  
- if devise_mapping.recoverable? && !controller_name.in?(['passwords', 'confirmations']) && controller_name != 'registrations'
  = link_to t(".forgot_password"), new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && !controller_name.in?(['confirmations', 'passwords', 'sessions'])
  = link_to t(".confirmation_not_received"), new_confirmation_path(resource_name)
  %br/
